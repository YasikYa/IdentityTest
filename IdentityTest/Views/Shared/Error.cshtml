@model IEnumerable<string>
@{
    ViewBag.Title = "Error";
}

<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Somethins is wrongt...
            break;
        case 1:
            @Model.First()
            break;
        default:
            @: Got next errors:
            <ul>
                @foreach(string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("Ok", "Index", null, new { @class = "btn btn-default"})

