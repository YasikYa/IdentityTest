@using IdentityTest.Models
@model EditRoleModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit role <b>***@Model.Role.Name***</b></h2>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <input type="hidden" value="@Model.Role.Name" name="roleName" />
    <div class="panel panel-primary">
        <div class="panel-heading">Add in Role</div>
        <table class="table table-striped">
            @if(Model.usersNotInRole.Count() == 0)
            {
                <tr>
                    <td colspan="2">No users to Add</td>
                </tr>
            }
            else
            {
                <tr>
                    <td>UserId</td>
                    <td>Add</td>
                </tr>
                foreach(AppUser user in Model.usersNotInRole)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Delete</div>
        <table class="table table-striped">
            @if(Model.usersInRole.Count() == 0)
            {
                <tr>
                    <td colspan="2">No users in this role.</td>
                </tr>
            }
            else
            {
                <tr>
                    <td>UserId</td>
                    <td>Delete</td>
                </tr>
                foreach(AppUser user in Model.usersInRole)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index",null, new { @class = "btn btn-default"})
}

